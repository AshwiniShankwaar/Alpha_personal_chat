<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/commentsection"
        android:orientation="horizontal"
        android:layout_marginLeft="3pt">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:id="@+id/userdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commenttextsection"
            android:orientation="vertical"
            android:layout_marginLeft="4pt"
            >

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usercommenttext"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:text="usercomment"
                android:layout_marginTop="1pt"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/replysection"
        android:layout_below="@+id/commentsection"
        android:layout_marginLeft="12pt"
        android:layout_marginTop="2pt">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="20pt"
            android:layout_height="20pt"
            android:id="@+id/replyuserdp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ccommentreplttextsection"
            android:orientation="vertical"
            android:layout_marginLeft="4pt"
            >

            <TextView
                android:id="@+id/replyusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textSize="14sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usercommentreplytext"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:text="usercomment"
                android:layout_marginTop="1pt"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>