<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatssetting">
    <include
        layout="@layout/app_bar"
        android:id="@+id/setting_toolbar"
        >
    </include>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/setting_toolbar">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5pt"
            android:id="@+id/wallpaper">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imagekey1"
            android:layout_width="25pt"
            android:layout_height="25pt"
            android:src="@drawable/ic_wallpaper"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4pt"
             />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/keyname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallpaper"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/profile_image"
                android:textSize="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8pt"
                android:layout_below="@+id/setting_toolbar"/>
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5pt"
            android:id="@+id/Delete"
            android:layout_below="@+id/wallpaper">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imagekey2"
                android:layout_width="25pt"
                android:layout_height="25pt"
                android:src="@drawable/ic_chathistry"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4pt"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/keyname2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete chat history"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/profile_image"
                    android:textSize="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8pt"
                    android:layout_below="@+id/setting_toolbar"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>