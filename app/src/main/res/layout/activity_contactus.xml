<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contactus">
    <include
        layout="@layout/app_bar"
        android:id="@+id/setting_toolbar"
        >
    </include>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_below="@+id/setting_toolbar"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="10pt"
        android:layout_marginLeft="18pt"
        android:text="Enter you Message or question."/>
    <EditText
        android:layout_width="160pt"
        android:layout_height="60pt"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text"
        android:layout_marginTop="10pt"
        android:id="@+id/edit"
        android:background="@drawable/textviewborder"
        />
    <ImageView
        android:layout_width="170pt"
        android:layout_height="150pt"
        android:id="@+id/screenimageview"
        android:layout_below="@+id/edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20pt"
        android:background="@color/greylight"

        />
    <ImageView
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:id="@+id/add"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_add"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/screenimageview"
        android:layout_marginTop="10pt"
        android:id="@+id/button"/>
</RelativeLayout>