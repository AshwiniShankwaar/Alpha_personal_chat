<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createpostpreview">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/closepostpreview"
        android:src="@mipmap/close"
        android:background="@null"
        android:scaleType="fitCenter"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doen"
        android:text="Doen"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:background="@null"
        android:layout_alignParentEnd="true"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/postcreatepreview"
        android:layout_below="@+id/doen"
        />

    <ImageButton
        android:layout_width="18pt"
        android:layout_height="18pt"
        android:id="@+id/tagbutton"
        android:src="@mipmap/ic_tag"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100pt"
        android:layout_marginRight="2pt"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/white"
        android:id="@+id/tagfriendframe">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tagbackbutton"
                    android:src="@mipmap/back"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="1pt"
                    android:layout_marginLeft="1pt"
                    android:layout_weight="1"
                    android:background="@null"/>

                <Button
                    android:id="@+id/tagnextbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="1pt"
                    android:layout_marginTop="1pt"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/aclonica"
                    android:text="Done"
                    android:layout_weight="1"
                    android:layout_marginLeft="110pt"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    />
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tagfriendrecycleview"

                />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>